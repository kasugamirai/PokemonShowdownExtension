{
  "manifest_version": 2,
  "name": "Translation Extension",
  "version": "1.0",
  "description": "A Chrome Extension that translates web pages",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/main.js"],
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html"
  },
  "permissions": ["activeTab"]
}
